<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainTheme"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_view_main"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <RelativeLayout
                        android:id="@+id/boboboxLiteLL"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/border_radius_white">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Bobobox Lite"
                                android:textStyle="bold"
                                android:textColor="@color/colorTheme"
                                android:textSize="20dp" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/ic_lite" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:paddingBottom="20dp"
                                android:paddingTop="0dp"
                                android:text="You can choose an hourly stay."
                                android:textColor="@color/colorTextPrimaryBlack"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/boboboxStayLL"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/border_radius_white">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Bobobox Stay"
                                android:textStyle="bold"
                                android:textColor="@color/colorTheme"
                                android:textSize="20dp" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/ic_stay" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:paddingBottom="20dp"
                                android:text="24 Hour you can stay here."
                                android:textColor="@color/colorTextPrimaryBlack"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:text="Special Price"
                        android:textColor="@color/colorTextPrimaryBlack"
                        android:textSize="20dp" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <RelativeLayout
                                android:layout_width="150dp"
                                android:layout_height="90dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/border_radius">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:id="@+id/boboboxImagePromoIV1"
                                    android:backgroundTint="#000"
                                    android:background="@drawable/border_radius"/>
                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    android:text="10% OFF"
                                    android:gravity="center"
                                    android:id="@+id/boboboxSpecialPromoPercentTV1"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="8sp"
                                    android:background="@drawable/border_radius_special_promo"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_alignParentBottom="true">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:paddingLeft="5dp"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Bobobox Dago"
                                            android:textSize="12sp"
                                            android:textColor="@color/colorTextPrimary"
                                            android:id="@+id/boboboxSpecialPromoNameTV1"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Bandung"
                                            android:textSize="12dp"
                                            android:textColor="@color/colorTextPrimary"
                                            android:id="@+id/boboboxSpecialPromoCityTV1"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="10sp"
                                                android:id="@+id/boboboxOldPricePromoTV1"
                                                android:textColor="@color/colorTextPrimary"
                                                android:text="Rp. 200.000"
                                                android:layout_marginRight="5dp"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="10sp"
                                                android:id="@+id/boboboxNewPricePromoTV1"
                                                android:textColor="@color/colorTextPrimary"
                                                android:text="Rp. 180.000"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="150dp"
                                android:layout_height="90dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/border_radius">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:id="@+id/boboboxImagePromoIV2"
                                    android:backgroundTint="#000"
                                    android:background="@drawable/border_radius"/>
                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    android:text="10% OFF"
                                    android:gravity="center"
                                    android:id="@+id/boboboxSpecialPromoPercentTV2"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="8sp"
                                    android:background="@drawable/border_radius_special_promo"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_alignParentBottom="true">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:paddingLeft="5dp"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Bobobox Surapati"
                                            android:textSize="12sp"
                                            android:textColor="@color/colorTextPrimary"
                                            android:id="@+id/boboboxSpecialPromoNameTV2"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Jakarta"
                                            android:textSize="12dp"
                                            android:textColor="@color/colorTextPrimary"
                                            android:id="@+id/boboboxSpecialPromoCityTV2"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="10sp"
                                                android:id="@+id/boboboxOldPricePromoTV2"
                                                android:textColor="@color/colorTextPrimary"
                                                android:text="Rp. 200.000"
                                                android:layout_marginRight="5dp"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="10sp"
                                                android:id="@+id/boboboxNewPricePromoTV2"
                                                android:textColor="@color/colorTextPrimary"
                                                android:text="Rp. 160.000"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="150dp"
                                android:layout_height="90dp"
                                android:background="@drawable/border_radius">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:id="@+id/boboboxImagePromoIV3"
                                    android:backgroundTint="#000"
                                    android:background="@drawable/border_radius"/>
                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    android:text="10% OFF"
                                    android:gravity="center"
                                    android:id="@+id/boboboxSpecialPromoPercentTV3"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="8sp"
                                    android:background="@drawable/border_radius_special_promo"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_alignParentBottom="true">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:paddingLeft="5dp"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Bobobox Kuta"
                                            android:textSize="12sp"
                                            android:textColor="@color/colorTextPrimary"
                                            android:id="@+id/boboboxSpecialPromoNameTV3"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Bali"
                                            android:textSize="12dp"
                                            android:textColor="@color/colorTextPrimary"
                                            android:id="@+id/boboboxSpecialPromoCityTV3"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="10sp"
                                                android:id="@+id/boboboxOldPricePromoTV3"
                                                android:textColor="@color/colorTextPrimary"
                                                android:text="Rp. 200.000"
                                                android:layout_marginRight="5dp"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="10sp"
                                                android:id="@+id/boboboxNewPricePromoTV3"
                                                android:textColor="@color/colorTextPrimary"
                                                android:text="Rp. 160.000"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
