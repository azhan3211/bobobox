<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainTheme"
    tools:context="com.example.bobobox.bobobox.Fragments.FragmentMyBooking">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorTheme"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorColor="@android:color/white"
        app:tabSelectedTextColor="@color/colorTextPrimary"
        app:tabTextAppearance="@style/MyTabBookingAppearance"
        app:tabTextColor="@color/colorUnselected"
        android:id="@+id/tabMyBooking"></android.support.design.widget.TabLayout>
    <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/fragmentMyBooking"></RelativeLayout>-->
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mybookingVP"></android.support.v4.view.ViewPager>
</LinearLayout>