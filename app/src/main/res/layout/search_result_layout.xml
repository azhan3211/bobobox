<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.ActionBarContainer
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorTheme">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTheme"></LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Search"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/colorTextPrimary"
            android:layout_gravity="center"/>
    </android.support.v7.widget.ActionBarContainer>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/nextToBC">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_view_main"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorBackgroundW"
                android:layout_marginBottom="10dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wen, 20"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:id="@+id/boboboxDateInSearch"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sep 2017"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/colorTextPrimary"
                        android:id="@+id/boboboxMonthYearInSearch"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextPrimary"
                        android:id="@+id/boboboxHourInSearch"
                        android:textStyle="bold"
                        android:text="13.00"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextPrimary"
                        android:text="WIB"
                        android:textStyle="bold"
                        android:id="@+id/boboboxAmPmInSearch"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BDG, IND"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/boboboxAddressSearch"
                        android:textColor="@color/colorTextPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 Room"
                        android:layout_marginBottom="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:id="@+id/boboboxNumberRoomSearch"
                        android:textColor="@color/colorTextPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2 Guest"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:id="@+id/boboboxNumberPersonSearch"
                        android:textColor="@color/colorTextPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingLeft="30dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wen, 20"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="20dp"
                        android:id="@+id/boboboxDateOutSearch"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sep 2017"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextPrimary"
                        android:id="@+id/boboboxMonthYearOutSearch"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextPrimary"
                        android:id="@+id/boboboxHourOutSearch"
                        android:textStyle="bold"
                        android:text="13.00"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextPrimary"
                        android:text="WIB"
                        android:textStyle="bold"
                        android:id="@+id/boboboxAmPmOutSearch"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorBackgroundW"
                android:layout_marginTop="10dp">

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/search"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/colorMainTheme"
        android:id="@+id/boboboxRecycleView"/>
</LinearLayout>